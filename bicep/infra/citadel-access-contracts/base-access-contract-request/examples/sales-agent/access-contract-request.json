{
  "$schema": "../../access-contract-request.schema.json",
  "contractInfo": {
    "businessUnit": "Sales",
    "useCaseName": "Assistant",
    "environment": "DEV",
    "description": "Sales Assistant with basic LLM access - subscription-level capacity only, no content safety or PII handling.",
    "productTerms": "Sales department AI assistant access contract"
  },
  "infrastructure": {
    "apim": {
      "subscriptionId": "00000000-0000-0000-0000-000000000000",
      "resourceGroupName": "rg-apim-resource-group",
      "name": "apim-instance-name"
    },
    "keyVault": {
      "enabled": false
    },
    "foundry": {
      "enabled": false
    }
  },
  "apiNameMapping": {
    "LLM": ["universal-llm-api", "azure-openai-api"]
  },
  "services": [
    {
      "code": "LLM",
      "endpointSecretName": "SALES-ASSISTANT-LLM-ENDPOINT",
      "apiKeySecretName": "SALES-ASSISTANT-LLM-KEY"
    }
  ],
  "policies": {
    "modelAccess": {
      "enabled": true,
      "allowedModels": ["gpt-4o", "text-embedding-3-large"]
    },
    "capacityManagement": {
      "enabled": true,
      "mode": "subscription-level",
      "subscriptionLevel": {
        "tokensPerMinute": 1000,
        "tokenQuota": 100000,
        "tokenQuotaPeriod": "Monthly"
      }
    }
  }
}
